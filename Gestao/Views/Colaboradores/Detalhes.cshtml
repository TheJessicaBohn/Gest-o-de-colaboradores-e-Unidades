@model Gestao.Models.ColaboradoresModel

@{
    ViewData["Title"] = "Detalhes do Colaborador";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-info text-white">
            <h1 class="h4 mb-0"><i class="bi bi-person-vcard me-2"></i>Detalhes do Colaborador</h1>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.ColaboradorNome)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ColaboradorNome)
                </dd>

                <dt class="col-sm-3 fw-bold">
                    @Html.DisplayNameFor(model => model.UnidadeId)
                </dt>
            </dl>

            <div class="mt-4">
                <a asp-action="EditarColaborador" asp-route-id="@Model?.ColaboradorId" class="btn btn-warning me-2">
                    <i class="bi bi-pencil-square me-1"></i> Editar
                </a>
                <a asp-action="ListarColaboradores" class="btn btn-secondary">
                    <i class="bi bi-arrow-left-circle me-1"></i> Voltar Ã  Lista
