@model Gestao.Models.ColaboradoresModel
@{
    ViewData["Title"] = "Criar Colaborador";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-secondary text-white">
            <h1 class="h4 mb-0">
                <i class="bi bi-person-fill-gear me-2"></i>
                 "Criar Colaborador"
            </h1>
        </div>
        <div class="card-body">
            <form asp-controller="Colaboradores" asp-action="CriarColaborador" method="post" class="needs-validation">
                @if (Model.ColaboradorId != 0)
                {
                    <input type="hidden" asp-for="ColaboradorId" />
                }

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="ColaboradorNome" class="form-label fw-bold"></label>
                        <input asp-for="ColaboradorNome" class="form-control" required />
                        <span asp-validation-for="ColaboradorNome" class="text-danger"></span>
                        <div class="invalid-feedback">Por favor, informe o nome completo.</div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="UnidadeId" class="form-label fw-bold">Unidade relacionada:</label>
                        <select asp-for="UnidadeId" class="form-select" asp-items="@(ViewData["UnidadeId"] as SelectList)" required>
                            <option value="">Selecione uma unidade</option>
                        </select>
                        <span asp-validation-for="UnidadeId" class="text-danger"></span>
                        <div class="invalid-feedback">Por favor, selecione uma unidade.</div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-circle-fill me-1"></i> Salvar
                        </button>
                        <a class="btn btn-primary" asp-controller="Colaboradores" asp-action="ListarCocaboradores">
                            <i class="bi bi-arrow-left-circle-fill me-1"></i> Voltar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict'
            var forms = document.querySelectorAll('.needs-validation')
            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }
                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
