@model LoginViewModel

@{
    ViewData["Title"] = "Login";
}

<div class="container mt-5">
    <h2 class="text-center">Login</h2>
    <form asp-controller="Account" asp-action="Login" method="post">
        <hr/>
        <div asp-validation-summary="All" class="text-danger"></div>
        <input type="hidden" asp-for="RetornaURL" />
        <div class="form-group">
            <label asp-for="NomeUsuario" class="col-md-2" control-label></label>
            <div class="col-md-6">
                <input asp-for="NomeUsuario" class="form-control" />
                <span asp-validation-for="NomeUsuario" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <label asp-for="Senha" class="col-md-2" control-label></label>
            <div class="col-md-6">
                <input asp-for="Senha" class="form-control" />
                <span asp-validation-for="Senha" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-8">
                <input type="submit" class="btn btn-success" value="Log in" />
            </div>
        </div>
    </form>
</div>
