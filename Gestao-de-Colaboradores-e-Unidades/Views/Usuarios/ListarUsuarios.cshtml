@model IEnumerable<UsuariosModel>
@{
    ViewData["Title"] = "Usuários";
}

<div class="container mt-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1 class="display-4 text-secondary">
           <i class="bi bi-people"></i> Listagem de Usuários</h1>
        <div>
            <a class="btn btn-warning btn-sm" asp-action="Usuario">
                <i class="bi bi-plus-circle"></i> Criar Novo Usuário
            </a>
        </div>
    </div>

    <div class="card shadow-sm">
       <div class="card-header bg-secondary text-white">
            <h5 class="mb-0">
                <i class="bi bi-list mr-2"></i>Usuários Cadastrados
            </h5>
        </div>
        <div class="card-body">
          <table class="table table-hover">
              <thead class="table-light">
                  <tr>
                      <th scope="col" >
                       <i class="bi bi-people mr-2"></i> Usuário</th>
                      <th scope="col" >
                        <i class="bi bi-envelope-at"></i> Login/e-mail</th>
                      <th scope="col" >
                        <i class="bi bi-check2-circle"></i> Status</th>
                      <th scope="col" >
                        <i class="bi bi-sliders mr-2"></i> Ações</th>
                  </tr>
              </thead>
              <tbody>
                  @foreach (var usuario in Model)
                  {
                      <tr>
                          <td class="align-middle">@Html.DisplayFor(modelUsuario => usuario.UsuarioNome)</td>
                          <td class="align-middle">@Html.DisplayFor(modelUsuario => usuario.UsuarioEmail)</td>
                          <td class="align-middle text-center">
                              @if (usuario.UsuarioStatus)
                              {
                                  <span class="badge bg-success">Ativo</span>
                              }
                              else
                              {
                                  <span class="badge bg-secondary">Inativo</span>
                              }
                          </td>
                          <td class="align-middle text-center">
                              <div class="btn-group btn-group-sm" role="group">
                                  <a class="btn btn-outline-primary" asp-action="Edit" asp-route-id="@usuario.UsuarioId" 
                                    data-bs-toggle="tooltip" title="Editar">
                                      <i class="bi bi-pencil"></i>
                                  </a>
                                  <a class="btn btn-outline-info" asp-action="Details" asp-route-id="@usuario.UsuarioId"
                                    data-bs-toggle="tooltip" title="Visualizar">
                                      <i class="bi bi-eye"></i>
                                  </a>
                                  <a class="btn btn-outline-danger" asp-action="Delete" asp-route-id="@usuario.UsuarioId"
                                    data-bs-toggle="tooltip" title="Excluir">
                                      <i class="bi bi-trash"></i>
                                  </a>
                              </div>
                          </td>
                      </tr>
                  }
              </tbody>
          </table>
      </div>
    </div>

    <div class="mt-3">
        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
            <i class="bi bi-arrow-left"></i> Voltar
        </a>
    </div>
</div>

@section Scripts {
    <script>
        // Ativa os tooltips do Bootstrap
        document.addEventListener('DOMContentLoaded', function () {
            var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
            var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
                return new bootstrap.Tooltip(tooltipTriggerEl)
            })
        });
    </script>
}