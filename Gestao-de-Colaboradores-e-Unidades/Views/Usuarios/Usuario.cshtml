@model UsuariosModel

@{
    var isEditando = !string.IsNullOrEmpty(Model.UsuarioId);
    var titulo = isEditando ? "Editar Usuário" : "Cadastrar Usuário";
    var action = isEditando ? "Editar" : "Cadastrar";
}

<form asp-action="@action" asp-route-id="@Model.UsuarioId" method="post" class="needs-validation" novalidate>
    <div class="container mt-4">
        <div class="card shadow">
            <div class="card-header bg-secondary text-white">
                <h1 class="h4 mb-0">
                    <i class="bi bi-person-fill-gear me-2"></i>@titulo
                </h1>
            </div>
            <div class="card-body">

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="UsuarioNome" class="form-label fw-bold"></label>
                        <input asp-for="UsuarioNome" class="form-control" required />
                        <span asp-validation-for="UsuarioNome" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-3">
                    <div class="col-md-6">
                        <label asp-for="UsuarioEmail" class="form-label fw-bold"></label>
                        <input asp-for="UsuarioEmail" class="form-control" required />
                        <span asp-validation-for="UsuarioEmail" class="text-danger"></span>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label asp-for="UsuarioStatus" class="form-label fw-bold"></label>
                        <select asp-for="UsuarioStatus" class="form-select" required>
                            <option value="">Selecione o status</option>
                            <option value="true">Ativo</option>
                            <option value="false">Inativo</option>
                        </select>
                        <span asp-validation-for="UsuarioStatus" class="text-danger"></span>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-circle-fill me-1"></i> Salvar
                        </button>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-arrow-left-circle-fill me-1"></i> Voltar
                        </a>
                    </div>
                </div>

            </div>
        </div>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}
