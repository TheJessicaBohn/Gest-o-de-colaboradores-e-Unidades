@{
    ViewData["Title"] = "Criar/Editar/Visualizar Colaborador";
}

<div class="container mt-4">
    <div class="card shadow">
        <div class="card-header bg-secondary text-white">
            <h1 class="h4 mb-0"><i class="bi bi-person-fill-gear me-2"></i>Criar/Editar/Visualizar Colaborador</h1>
        </div>
        <div class="card-body">
            <form method="post" class="needs-validation" novalidate>
                <div class="row mb-3">
                    <div class="col-md-6">
                        <label for="nomeCompleto" class="form-label fw-bold">Nome completo:</label>
                        <input type="text" class="form-control" id="nomeCompleto" name="nomeCompleto" required>
                        <div class="invalid-feedback">
                            Por favor, informe o nome completo.
                        </div>
                    </div>
                </div>

                <div class="row mb-4">
                    <div class="col-md-6">
                        <label for="unidadeRelacionada" class="form-label fw-bold">Unidade relacionada:</label>
                        <select class="form-select" id="unidadeRelacionada" name="unidadeRelacionada" required>
                            <option value="" selected disabled>Selecione uma unidade</option>
                            <option value="1">Unidade A</option>
                            <option value="2">Unidade B</option>
                            <option value="3">Unidade C</option>
                        </select>
                        <div class="invalid-feedback">
                            Por favor, selecione uma unidade.
                        </div>
                    </div>
                </div>

                <div class="row">
                    <div class="col-md-12">
                        <button type="submit" class="btn btn-success me-2">
                            <i class="bi bi-check-circle-fill me-1"></i> Salvar
                        </button>
                        <a class="btn btn-primary" asp-controller="Home" asp-action="Index">
                            <i class="bi bi-arrow-left-circle-fill me-1"></i> Voltar
                        </a>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        (function () {
            'use strict'

            var forms = document.querySelectorAll('.needs-validation')

            Array.prototype.slice.call(forms)
                .forEach(function (form) {
                    form.addEventListener('submit', function (event) {
                        if (!form.checkValidity()) {
                            event.preventDefault()
                            event.stopPropagation()
                        }

                        form.classList.add('was-validated')
                    }, false)
                })
        })()
    </script>
}